{{#each blogs as |blog| }}
<div class="card" style= "margin-top: 10px;">
  <div class="card-header">
  {{!-- <a href="/blog/{{blog.id}}"><h5>{{blog.name}}</h5></a> --}}
  <h5>{{blog.name}}</h5>
  <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
  <div class="card-body">
    <!-- <h5 class="card-title">Special title treatment</h5> -->
